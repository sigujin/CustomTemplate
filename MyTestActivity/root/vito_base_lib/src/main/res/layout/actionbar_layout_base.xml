<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/actionbar_head"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/abc_action_bar_progress_bar_size">

    <FrameLayout
        android:id="@+id/fl_left_1"
        android:layout_width="@dimen/abc_action_bar_progress_bar_size"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/left_view"
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="左一"
            android:textSize="@dimen/text_middle_m"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_left_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_left_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fl_left_1"
        android:visibility="visible">

        <TextView
            android:id="@+id/left_view_2"
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:text="左二"
            android:textSize="@dimen/text_middle_m"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_left_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_right_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/right_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="右一"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small_l"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_right_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_right_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fl_right_1"
        android:visibility="visible">

        <TextView
            android:id="@+id/right_view_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="右二"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small_l"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_right_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fl_right_2"
        android:layout_toRightOf="@id/fl_left_2"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#1b1b1b"
        android:textSize="@dimen/text_middle_m"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_divider_bottom"
    android:visibility="gone"/>

</RelativeLayout>